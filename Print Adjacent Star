public class AdjacentStar {
    static String adj(String str) {
        if (str.length() <= 1) {   // Base case: 0 or 1 character
            return str;
        }

        // If first two characters are the same
        if (str.charAt(0) == str.charAt(1)) {
            return str.charAt(0) + "*" + adj(str.substring(1));
        } 
        else { 
            // If different, just keep the character
            return str.charAt(0) + adj(str.substring(1));
        }
    }

    public static void main(String args[]) {
        System.out.println(adj("aabb"));   // Example
    }
}
